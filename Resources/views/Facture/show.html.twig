{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Facture</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Datefacturation</th>
                <td>{{ entity.dateFacturation|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Datepaiement</th>
                <td>{{ entity.datePaiement|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Methodpaiement</th>
                <td>{{ entity.methodPaiement }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ entity.total }}</td>
            </tr>
            <tr>
                <th>Paid</th>
                <td>{{ entity.paid }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('facture') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('facture_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
