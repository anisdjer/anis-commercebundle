    .ie7 .ie6 .post .layout-cell {border:none !important; padding:0 !important; }

    input
    {
    border-radius: 20px;
    text-align: center;
    }
    tr , td, th{
    border: hidden;
    text-align: left;
    }


{% endblock %}
{% block content %}

{{ form_start(form) }}
{{ form_widget(form._token) }}

        <div class="art-layout-cell layout-item-2" style="width: 50%" >
            <table class="art-article" style="box-shadow: 5px 5px 1px #222;border-radius: 20px ;background-color: #E6E6E6 ;width: 80%;margin-left: 10%">
                <tr>
                    <td style="word-spacing: 4px; line-height: 150%; text-align: left; margin-top: 15px; margin-bottom: 15px; vertical-align: middle; width: 50%; border-right-width: 0; border-bottom-width: 0; border-left-width: 0; border-radius: 40px;background-color: #ffffff; padding: 20px" colspan="10"><span style="font-weight: bold; font-size: 16px; color: rgb(13, 53, 15); text-shadow: rgba(60, 23, 23, 0.496094) 0 -1px 0;"><center>modifier Client</center></span><br></td>
                </tr>
                <tr style="width: 30%">

                    <td>
                        <table style="width: 100%;height: 100%;border: hidden">
                            <tr><th style="text-align: left; width: 50%"><label>Nom</label>{{ form_widget (form.lastname) }}</th><th style="text-align: left"><label>Prenom</label>{{ form_widget(form.firstname) }}</th></tr>
                            <tr style="height: 10px;"><td></td><td></td></tr>
                            <tr style="height: 10px;"><td></td><td></td></tr>
                            <tr><th style="text-align: left; width: 50%"><label>Sexe<span style="color: red">*</span></label>{{ form_widget (form.gender) }} <span style="float: right" ><label>Age<span style="color: red">*</span></label>{{ form_widget (form.age) }} </span></th><th style="text-align: left"><label>Email<span style="color: red">*</span></label>{{ form_widget(form.emailAddress) }}</th></tr>
                            <tr style="height: 10px;"><td></td><td></td></tr>
                            <tr style="height: 10px;"><td></td><td></td></tr>
                            {#<tr><th style="text-align: left; width: 50%"><label>Age<span style="color: red">*</span></label>{{ form_widget (form.age) }}</th><th style="text-align: left"><label>Verification Password<span style="color: red">*</span></label><input type="password" required="required"/></th></tr>#}
                        </table>
                    </td>

                </tr>
                <tr>
                    <td colspan="2" style="height: 20px"></td>
                </tr>
                <tr>
                    <td>
                        <table style="width: 100%">
                            <tr>
                                <th style="text-align: left; width: 50%">
                                    <label>Telephone</label>
                                    {{ form_widget(form.tel) }}
                                </th>
                                <th style="text-align: left">
                                    <label>CIN</label>
                                    {{ form_widget(form.cin) }}
                                </th>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr><td><button class="art-button" style="border: hidden;background-color: #2e8b57;color: #009933" type="submit">Sauvegarder</button></td></tr>
            </table>

            <div style="visibility: hidden" >
                {{ form_rest(form) }}
            </div>

            {{ form_end(form) }}

{% endblock %}
